<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="technifutur.be.projetyoutube.fragment.ShowAchievementFragment"
    android:clickable="true"
    android:id="@+id/layout_reveal_achievement">

    <RelativeLayout
        android:id="@+id/layout_achievement_animate"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/myWhite">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nouveau_defi_debloquer_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nouveau défi débloqué !"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/myBlack"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/image_achievement_reveal"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_below="@id/nouveau_defi_debloquer_textview"/>

                <TextView
                    android:id="@+id/text_achievement_reveal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/myBlue"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</RelativeLayout>
