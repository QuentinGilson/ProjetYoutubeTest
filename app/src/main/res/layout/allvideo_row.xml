<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myWhite">

    <TextView
        android:id="@+id/textview_youtube_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/myBlack"
        android:background="@color/myWhite"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageview_youtube_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_youtube_cell"/>

    <TextView
        android:id="@+id/textview_youtube_cell_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/myWhite"
        android:background="@color/myBlack2"
        android:layout_above="@+id/layout_option_video"
        android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:id="@+id/layout_option_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_youtube_cell"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textview_youtube_cell_numberview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myBlack"
            android:background="@color/myWhite"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"/>

        <com.facebook.share.widget.ShareButton
            android:id="@+id/share_facebook_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"/>

        <Button
            android:id="@+id/share_tweeter_button"
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:background="@drawable/tw__btn_composer_tweet"
            android:text="Tweet"
            android:textAllCaps="false"
            android:textColor="@color/myWhite"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/share_facebook_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/share_tweeter_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp">

            <ImageView
                android:id="@+id/img_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/img_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/img_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/img_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/img_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"
                android:visibility="invisible"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>